# Servidor
PORT=3001
NODE_ENV=development

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=block_dns
DB_USER=postgres
DB_PASSWORD=your_password_here

# API
API_VERSION=v1
CORS_ORIGIN=http://localhost:5173

# JWT (opcional para futuras implementações)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# DNS Server RPZ
DNS_RPZ_PATH=/var/lib/bind/rpz.db
REDIRECT=localhost

# SCP Configuration for automatic RPZ file transfer
SCP_ENABLED=false
SCP_HOST=192.168.1.100
SCP_USER=bind-user
SCP_PATH=/etc/bind/rpz.db
SCP_KEY=~/.ssh/id_rsa
SCP_RESTART_BIND=true